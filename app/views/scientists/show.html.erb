<h1><%= @scientist.name %></h1>
<h3>Specialty: <%= @scientist.specialty %></h3>
<h3>University: <%= @scientist.university %></h3>
<h3>Lab: <%= @scientist.lab.name %></h3>
<p id="experiments">
<h3>Experiments:</h3>
<% @scientist.experiments.each do |experiment| %>
  <div id="experiment-<%= experiment.id %>">
    <p>
      <%= experiment.name %>
      <%= button_to 'Remove', destroy_scientist_experiment_path(@scientist, experiment), method: :delete %>
    </p>
  </div>
<% end %>
</p>